<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/all_style_dialog"
    android:orientation="vertical"
    android:padding="@dimen/margin">

    <me.imstudio.core.ui.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/margin"
        android:text="@android:string/dialog_alert_title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/size_text_extra_medium"
        android:textStyle="bold" />

    <me.imstudio.core.ui.widget.TextView
        android:id="@id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="5"
        android:minLines="2"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:textSize="@dimen/size_text_extra_medium" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginTop="@dimen/margin"
        android:orientation="horizontal">

        <me.imstudio.core.ui.widget.TextView
            android:id="@id/button_cancel"
            android:layout_width="@dimen/size_icon_x8"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/all_style_button_default"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="@android:string/no"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <me.imstudio.core.ui.widget.TextView
            android:id="@id/button"
            android:layout_width="@dimen/size_icon_x8"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/all_style_button_default"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingTop="@dimen/margin"
            android:paddingBottom="@dimen/margin"
            android:text="@android:string/yes"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
